%table
  - for layer in @layers
    %tr
      %td= layer.title
      %td
        %a{ :href => "maps/#{layer.slug}.json" }
          JSON
      %td
        %a{ :href => "maps/#{layer.slug}.xml" }
          XML
      %td
        %a{ :href => "maps/#{layer.slug}.kml" }
          KML (Google Earth)
      %td
        %a{ :href => "maps/#{layer.slug}.rss" }
          GeoRSS

%p
  %a{ :href => '/' }
